<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E9CC7D"
    android:padding="16dp">


    <ImageView
        android:layout_width="97dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/smallclock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/acme"
        android:text="TickTick"
        android:textColor="#1D1C1C"
        android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9CC7D"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firstname"
                android:fontFamily="@font/acme"/>

            <EditText
                android:id="@+id/etFirstname"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/drawable_edittext"
                android:fontFamily="@font/acme"
                android:hint="Enter Firstname"
                android:paddingLeft="8dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lastname"
                android:fontFamily="@font/acme"/>

            <EditText
                android:id="@+id/etLastname"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/drawable_edittext"
                android:drawableRight="@drawable/ic_user"
                android:fontFamily="@font/acme"
                android:hint="Enter Lastname"
                android:paddingLeft="8dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:fontFamily="@font/acme"/>

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/drawable_edittext"
                android:drawableRight="@drawable/ic_user"
                android:fontFamily="@font/acme"
                android:hint="Enter Username"
                android:paddingLeft="8dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/acme"/>
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableRight="@drawable/ic_password"
                android:paddingLeft="8dp"
                android:background="@drawable/drawable_edittext"
                android:textSize="12sp"
                android:inputType="textPassword"
                android:hint="Enter Password"
                android:fontFamily="@font/acme"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/drawable_button"
                android:textColor="#fff"
                android:text="Register"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="openLoginActivity"
                android:orientation="horizontal"
                tools:ignore="OnClick">


            </LinearLayout>

        </LinearLayout>


</LinearLayout>